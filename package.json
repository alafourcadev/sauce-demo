{
  "name": "saucedemo-automation-screenplay",
  "version": "1.0.0",
  "description": "Automatizaci√≥n E2E + API con Screenplay Pattern, Cucumber y Playwright",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:e2e": "cucumber-js features/e2e/**/*.feature",
    "test:api": "cucumber-js features/api/**/*.feature",
    "test:report": "cucumber-js --format html:reports/cucumber-report.html --format json:reports/cucumber-report.json",
    "test:ci": "cucumber-js --format json:reports/cucumber-report.json --format html:reports/cucumber-report.html",
    "lint": "eslint src/**/*.ts features/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"features/**/*.ts\""
  },
  "keywords": [
    "qa",
    "automation",
    "screenplay",
    "cucumber",
    "playwright",
    "bdd",
    "e2e",
    "api-testing"
  ],
  "author": "Alejandro Lafourcade",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "dotenv": "^16.4.1",
    "prettier": "^3.2.5",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "multiple-cucumber-html-reporter": "^3.6.2"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  }
}
